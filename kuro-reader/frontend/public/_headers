# 
# Security headers sono gestiti dinamicamente da server.js per evitare duplicati
# Questo file mantiene solo configurazioni cache per assets statici
#

# HTML - No cache
/index.html
  Cache-Control: no-cache, no-store, must-revalidate

# Service Worker - No cache
/sw.js
  Cache-Control: no-cache, no-store, must-revalidate
  
/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate

# JavaScript - cache 1 anno con hash
/assets/js/*
  Cache-Control: public, max-age=31536000, immutable
  
# CSS - cache 1 anno con hash
/assets/css/*
  Cache-Control: public, max-age=31536000, immutable

# Immagini - cache 1 anno
/assets/img/*
  Cache-Control: public, max-age=31536000, immutable
  
# Fonts - cache 1 anno
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  
# Icone e manifest - cache 1 settimana
/*.png
  Cache-Control: public, max-age=604800
  
/*.webp
  Cache-Control: public, max-age=604800
  
/*.ico
  Cache-Control: public, max-age=604800
  
/*.svg
  Cache-Control: public, max-age=604800
  
/manifest.json
  Cache-Control: public, max-age=604800

# SEO files - cache breve per aggiornamenti frequenti
/sitemap.xml
  Cache-Control: public, max-age=3600
  
/robots.txt
  Cache-Control: public, max-age=86400

# Offline page - cache media
/offline.html
  Cache-Control: public, max-age=604800

# Tutti gli altri static assets
/*
  Cache-Control: public, max-age=3600
