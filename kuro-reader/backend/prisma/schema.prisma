generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  favorites user_favorites?
  reading   reading_progress[]
  library   user_library?
}

model user_favorites {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  favorites String   @db.Text
  updatedAt DateTime @updatedAt
}

model reading_progress {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mangaUrl     String
  mangaTitle   String
  chapterIndex Int
  pageIndex    Int      @default(0)
  updatedAt    DateTime @updatedAt

  @@unique([userId, mangaUrl])
  @@index([userId])
}

model user_library {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reading   String?  @db.Text
  completed String?  @db.Text
  history   String?  @db.Text
  updatedAt DateTime @updatedAt
}
