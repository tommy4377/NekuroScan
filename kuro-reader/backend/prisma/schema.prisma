generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")  // ✅ Aggiungi questa riga
}

model user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // ⚠️ Relazioni vecchie (con nomi espliciti per evitare conflitti)
  profile         user_profile?      @relation("profile")
  favorites_old   user_favorites?    @relation("favorites_old")
  reading         reading_progress[] @relation("reading")
  library         user_library?      @relation("library")
  follows         user_follows[]     @relation("follower")
  followers       user_follows[]     @relation("following")
  
  // ✅ NUOVE TABELLE NORMALIZZATE
  favoritesNew    favorite[]       @relation("favoritesNew")
  libraryManga    library_manga[]  @relation("libraryManga")
  historyEntries  history_entry[]  @relation("historyEntries")
}

model user_profile {
  id            Int      @id @default(autoincrement())
  userId        Int      @unique
  user          user     @relation("profile", fields: [userId], references: [id], onDelete: Cascade)
  bio           String?  @db.Text
  avatarUrl     String?  @db.Text
  bannerUrl     String?  @db.Text
  isPublic      Boolean  @default(false)
  displayName   String?
  socialLinks   Json?
  viewCount     Int      @default(0)
  badges        String[] @default([])
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  @@index([isPublic]) // Performance: filtro profili pubblici
  @@index([viewCount]) // Performance: sorting per popolarità
}

model user_follows {
  id          Int      @id @default(autoincrement())
  followerId  Int
  followingId Int
  follower    user     @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  following   user     @relation("following", fields: [followingId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  
  @@unique([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

model user_favorites {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      user     @relation("favorites_old", fields: [userId], references: [id], onDelete: Cascade)
  favorites String   @db.Text
  updatedAt DateTime @updatedAt
  
  @@index([updatedAt]) // Performance: sorting sync recenti
}

model reading_progress {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         user     @relation("reading", fields: [userId], references: [id], onDelete: Cascade)
  mangaUrl     String
  mangaTitle   String
  chapterIndex Int
  pageIndex    Int      @default(0)
  totalPages   Int      @default(0)
  updatedAt    DateTime @updatedAt

  @@unique([userId, mangaUrl])
  @@index([userId])
  @@index([mangaUrl]) // Performance: lookup veloce per manga
  @@index([updatedAt]) // Performance: sorting per recenti
  @@index([userId, updatedAt]) // Composite: user + recenti (query comune)
}

model user_library {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      user     @relation("library", fields: [userId], references: [id], onDelete: Cascade)
  reading   String?  @db.Text
  completed String?  @db.Text
  dropped   String?  @db.Text
  history   String?  @db.Text
  updatedAt DateTime @updatedAt
  
  @@index([updatedAt]) // Performance: sorting sync recenti
}

// ============================================================================
// ✅ NORMALIZED TABLES - Migliora performance e permette query SQL efficienti
// ============================================================================

// ✅ Tabella Favorites normalizzata (sostituisce user_favorites.favorites JSON)
model favorite {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      user     @relation("favoritesNew", fields: [userId], references: [id], onDelete: Cascade)
  
  // Dati manga
  mangaUrl  String   @db.VarChar(500)
  mangaTitle String  @db.VarChar(500)
  coverUrl  String?  @db.Text
  source    String?  @db.VarChar(50)   // 'mangaWorld', 'mangaWorldAdult', etc.
  
  // Metadata
  addedAt   DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  @@unique([userId, mangaUrl])  // Un utente non può aggiungere lo stesso manga 2 volte
  @@index([userId])              // Query: tutti i favoriti di un utente
  @@index([mangaUrl])            // Query: quanti utenti hanno questo manga nei favoriti
  @@index([userId, addedAt])    // Query: favoriti recenti di un utente
  @@map("favorites")
}

// ✅ Tabella Library normalizzata (sostituisce user_library.reading/completed/dropped JSON)
model library_manga {
  id        Int      @id @default(autoincrement())
  userId    Int
  user      user     @relation("libraryManga", fields: [userId], references: [id], onDelete: Cascade)
  
  // Dati manga
  mangaUrl   String  @db.VarChar(500)
  mangaTitle String  @db.VarChar(500)
  coverUrl   String? @db.Text
  source     String? @db.VarChar(50)
  
  // Status: 'reading', 'completed', 'dropped', 'plan_to_read'
  status     String  @db.VarChar(20)
  
  // Metadata
  addedAt    DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // Stats opzionali
  rating     Int?     // 1-10
  notes      String?  @db.Text
  
  @@unique([userId, mangaUrl])    // Un manga può avere solo uno status per utente
  @@index([userId, status])       // Query: tutti i manga "reading" di un utente
  @@index([mangaUrl, status])     // Query: quanti utenti stanno leggendo questo manga
  @@index([userId, updatedAt])    // Query: manga aggiornati di recente
  @@map("library_manga")
}

// ✅ Tabella History normalizzata (sostituisce user_library.history JSON)
model history_entry {
  id         Int      @id @default(autoincrement())
  userId     Int
  user       user     @relation("historyEntries", fields: [userId], references: [id], onDelete: Cascade)
  
  // Dati manga/capitolo
  mangaUrl   String   @db.VarChar(500)
  mangaTitle String   @db.VarChar(500)
  chapterUrl String?  @db.VarChar(500)
  chapterTitle String? @db.VarChar(200)
  
  // Metadata
  viewedAt   DateTime @default(now())
  
  @@index([userId, viewedAt(sort: Desc)]) // Query: cronologia recente (ordinata DESC)
  @@index([userId, mangaUrl])             // Query: quando ho letto questo manga
  @@map("history")
}