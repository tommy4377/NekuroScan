generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  avatar    String?  @db.Text
  bio       String?
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  favorites     user_favorites?
  reading       reading_progress[]
  library       user_library?
  notifications notification_subscription[]
  followed      followed_manga[]
}

model user_favorites {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      user     @relation(fields: [userId], references: [id])
  favorites String   @db.Text
  updatedAt DateTime @updatedAt
}

model user_library {
  id        Int      @id @default(autoincrement())
  userId    Int      @unique
  user      user     @relation(fields: [userId], references: [id])
  reading   String?  @db.Text
  completed String?  @db.Text
  history   String?  @db.Text
  updatedAt DateTime @updatedAt
}

model reading_progress {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         user     @relation(fields: [userId], references: [id])
  mangaUrl     String
  mangaTitle   String
  chapterIndex Int
  pageIndex    Int      @default(0)
  updatedAt    DateTime @updatedAt

  @@unique([userId, mangaUrl])
}

model notification_subscription {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         user     @relation(fields: [userId], references: [id])
  endpoint     String   @unique
  p256dh       String
  auth         String
  createdAt    DateTime @default(now())
}

model followed_manga {
  id             Int      @id @default(autoincrement())
  userId         Int
  user           user     @relation(fields: [userId], references: [id])
  mangaUrl       String
  mangaTitle     String
  lastChapter    Int      @default(0)
  source         String
  createdAt      DateTime @default(now())
  
  @@unique([userId, mangaUrl])
}